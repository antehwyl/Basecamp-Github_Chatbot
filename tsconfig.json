{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [ "node_modules/*" ],
            "@app/*": [ "app/*" ],
            "@config/*": [ "config/*" ]
        }
    },
    "include": [
        "app/**/*"
    ]
}
